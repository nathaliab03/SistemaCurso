@{
    ViewData["Title"] = "Cadastrar Curso";
}

<div class="container-fluid bg-dark text-center text-light p-6 shadow-lg" id="container">

    <div class="borderTop"></div>
    <div class="borderLeft"></div>
    <div class="borderRight"></div>
    <div class="borderBottom"></div>

    <h1>@ViewData["Title"]</h1>

    <form>
        <div class="form-group row">
            <label for="nomeCurso" class="col-sm-2 col-form-label">Nome do Curso</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="nomeCurso" placeholder="Nome do Curso" required>
            </div>
        </div>

        <div class="form-group row mt-4 mb-3">
            <label for="cargaHoraria" class="col-sm-2 col-form-label">Carga Horária</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="cargaHoraria" placeholder="Carga Horária" required>
            </div>
        </div>

        <button class="btn btn-avanadeRed">Cancelar</button>
        <button class="btn btn-avanadeGreen">Cadastrar</button>
    </form>

</div>
